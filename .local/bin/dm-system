#!/bin/sh

act="$(printf "%s\n" "ğŸ›Œ shut this computer down" "ğŸ”ƒ restart this machine" "ğŸ“º turn the display off" | dmenu -l 6 -fn Monospace-16 -p "SYS:")"
if ls -l /sbin/init | grep -q runit; then
	sys=loginctl
else
	sys=systemctl
fi

case $act in
	ğŸ›Œ*) $sys poweroff ;;
	ğŸ”ƒ*) $sys reboot ;;
	ğŸ“º*) xset dpms force off ;;
esac
