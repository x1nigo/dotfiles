#! /bin/sh

bookmark="$(xclip -o)"
file="${XDG_DATA_HOME:-$HOME/.local/share}/bookmarks.txt"

answers="Sure! Nope."
confirm="$(for i in $answers; do echo $i; done | dmenu -p 'Add this bookmark?')"

if [ "$confirm" = "${answers%% *}" ]; then
        if grep -q "^$bookmark$" "$file"; then
                notify-send -t 6000 "ðŸ¤¡ Already bookmarked!"
        else
                echo "$bookmark" >> "$file" && notify-send -t 6000 "ðŸ”– Bookmark added!" "$bookmark"
        fi
else
        notify-send -t 6000 "â›” No added bookmark."
fi
