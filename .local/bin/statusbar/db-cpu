#!/bin/sh

# Install the systat package first.

cpu=$(mpstat | awk '/all/ { print int(100-$13) }') && icon="ðŸ’½"

case $BUTTON in
	1) st -e htop ;;
        3) notify-send "ðŸ’½ CPU module:" "\[Click to run \`htop\` program\]" ;;
	5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

printf "%s%s%%\n" "$icon" "$cpu"
