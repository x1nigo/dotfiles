#!/bin/sh

vol=$(wpctl get-volume @DEFAULT_AUDIO_SINK@)

case $BUTTON in
	1) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
	3) notify-send "ðŸ“¢ Volume Module:" "Left-click to toggle volume mute.
- ðŸ“¢ >= 100%
- ðŸ”Š >= 70%
- ðŸ”‰ >= 30%
- ðŸ”ˆ >= 1%" ;;
	6) ${TERMINAL:-st} -e "$EDITOR" "$0" ;;
esac

[ "$vol" != "${vol%\[MUTED\]}" ] && echo "ðŸ”‡" && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling an external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 100)) ) icon="ðŸ“¢" ;;
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ðŸ”‰" ;;
	$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
	* ) icon=ðŸ”‡ && exit ;;
esac

printf "%s%s%%" "$icon" "$vol"
