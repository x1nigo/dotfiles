#!/bin/sh

case $BUTTON in
        1) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
        3) notify-send "ðŸ”ˆ Volume module:" "\[Click to toggle mute\]
ðŸ“£ loudest
ðŸ”Š high
ðŸ”‰ medium
ðŸ”ˆ low
ðŸ”‡ muted speaker" ;;
	4) setsid -f ${TERMINAL:-st} -e pulsemixer ;;
        5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

vol=$(wpctl get-volume @DEFAULT_AUDIO_SINK@)

[ "$vol" != "${vol%\[MUTED\]}" ] && echo ðŸ”‡&& exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling an external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 100)) ) icon="ðŸ“£" ;;
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ðŸ”‰" ;;
	$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
	* ) echo ðŸ”‡ && exit ;;
esac

echo "$icon$vol%"
