#!/bin/sh

vol=$(wpctl get-volume @DEFAULT_AUDIO_SINK@)

[ "$vol" != "${vol%\[MUTED\]}" ] && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling an external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 100)) ) icon="ðŸ“¢" ;;
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ðŸ”‰" ;;
	$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
	* ) exit ;;
esac

printf "%s%s%%" "$icon" "$vol"
