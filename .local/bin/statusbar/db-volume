#! /bin/sh

vol=$(pamixer --get-volume)

[ $(pamixer --get-mute) = true ] && icon="ğŸ”‡"

if [ $(pamixer --get-mute) = false ]; then
        if [ $vol -ge 60 ]; then
                icon="ğŸ“¢"
        elif [ $vol -ge 40 ]; then
                icon="ğŸ”Š"
        elif [ $vol -ge 20 ]; then
                icon="ğŸ”‰"
        elif [ $vol -ge 0 ]; then
                icon="ğŸ”ˆ"
        fi
fi

case $BUTTON in
        1) pamixer -t ;;
        3) notify-send "ğŸ”ˆ Volume module:" "
ğŸ“š Instructions:
Left-click to toggle mute.

ğŸ“œ Legend:
ğŸ“¢: loudest
ğŸ”Š: high
ğŸ”‰: medium
ğŸ”ˆ: low
ğŸ”‡: muted speaker" ;;
        4) st -e pulsemixer ;;
        5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

printf " %s%s%%\n" "$icon" "$vol"
