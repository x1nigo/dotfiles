#! /bin/sh

dir="/sys/class/power_supply/BAT0"
bat=$(cat $dir/capacity) && stat=$(cat $dir/status)

case $stat in
        Discharging) icon="ğŸ”‹" && [ $bat -le 10 ] && notify-send -t 5000 "ğŸ’€â—â— warning: low battery, please charge soon!" ;;
        Charging) icon="ğŸ”Œ" ;;
        Full) icon="âš¡" ;;
esac

case $BUTTON in
        1) notify-send -t 5000 "$icon battery device is \`$stat\`!" ;;
        3) st -e $EDITOR ~/.local/bin/statusbar/db-battery ;;
        5) st -e $EDITOR ~/.config/dwmblocks/blocks.h ;;
esac

printf "%s %s%%\n" "$icon" "$bat"
