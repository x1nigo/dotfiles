#!/bin/sh

mem=$(free | awk '/Mem:/ { print int($3 * 100 / $2) }') && icon="ðŸ’¾"

case $BUTTON in
	1) st -e htop ;;
	3) notify-send "ðŸ’¾ Memory module:" "\[Click to run \`htop\` program\]" ;;
	5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

printf "%s%s%%\n" "$icon" "$mem"
