#! /bin/sh

if grep -x 'up' /sys/class/net/wl*/operstate >/dev/null 2>&1 ; then
        wlicon="📶" && perc="$(awk '/wl/ { print int($3 * 100 / 70) }' /proc/net/wireless)%"
else
        wlicon=📡
fi

[ $(grep -x 'up' /sys/class/net/e*/operstate) >/dev/null 2>&1 ] && ethicon="🌎" || ethicon=❎

case $BUTTON in
        1) st -e nmtui ;;
        3) active=$(nmcli -t -f name connection show --active)
                if [ -z $active ]; then
                        notify-send "🧭 Network module:" "Unable to connect to the internet.

📜 Legend:
📶: connected to wifi
📡: wifi-disconnected
🌎: connected to ethernet
❎: not connected to ethernet"
                else
                        notify-send "🧭 Network module:" "🌐 connected to: '$(nmcli -t -f name connection show --active)'

📜 Legend:
📶: connected to wifi
📡: wifi-disconnected
🌎: connected to ethernet
❎: not connected to ethernet"
                fi ;;
        5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

printf "%s %s %s\n" "$wlicon" "$perc" "$ethicon"
