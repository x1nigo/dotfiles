#! /bin/sh

if grep -x 'up' /sys/class/net/wl*/operstate >/dev/null 2>&1 ; then
        wlicon="ğŸ“¶" && perc="$(awk '/wl/ { print int($3 * 100 / 70) }' /proc/net/wireless)%"
else
        wlicon=ğŸ“¡
fi

[ $(grep -x 'up' /sys/class/net/e*/operstate) >/dev/null 2>&1 ] && ethicon="ğŸŒ" || ethicon=â

case $BUTTON in
        1) st -e nmtui ;;
        3) active=$(nmcli -t -f name connection show --active)
                if [ -z $active ]; then
                        notify-send "ğŸ§­ Network module:" "Unable to connect to the internet.

ğŸ“œ Legend:
ğŸ“¶: connected to wifi
ğŸ“¡: wifi-disconnected
ğŸŒ: connected to ethernet
â: not connected to ethernet"
                else
                        notify-send "ğŸ§­ Network module:" "ğŸŒ connected to: '$(nmcli -t -f name connection show --active)'

ğŸ“œ Legend:
ğŸ“¶: connected to wifi
ğŸ“¡: wifi-disconnected
ğŸŒ: connected to ethernet
â: not connected to ethernet"
                fi ;;
        5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

