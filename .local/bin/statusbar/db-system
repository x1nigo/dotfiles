#! /bin/sh

icon="🔒"

case $BUTTON in
        1) systemize ;;
        3) notify-send "🔒 System module:" "
📚 Instructions:
Left-click to display system settings.

📜 Legend:
🖥️: shutdown
♻️: restart computer
🚪: log out
💤: sleep
🔒: lock" ;;
        5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

printf "%s\n" "$icon "
