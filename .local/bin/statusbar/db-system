#!/bin/sh

icon="🔒"

case $BUTTON in
        1) sysmenu ;;
        3) notify-send "🔒 System module:" "\[Click to display system settings\]
🖥️ shutdown
♻️ restart computer
🚪 log out
💤 sleep
🔒 lock" ;;
        5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

printf "%s\n" "$icon "
