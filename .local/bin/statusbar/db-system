#! /bin/sh

icon="ğŸ”"

case $BUTTON in
        1) notify-send "ğŸ” Shift + Left-click this icon to show system settings." ;;
        3) st -e $EDITOR $HOME/.local/bin/statusbar/db-system ;;
        4) systemize ;;
        5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

printf "%s\n" "$icon "
