#!/bin/sh

case "$(uname)" in
	"OpenBSD" )
		case "$(apm -b)" in
			0) stat='&' ;;
			1) stat='z' ;;
			2) stat='!' ;;
			3) stat='+' ;;
			4) stat='x' ;;
			*) stat='?' ;;
		esac
		printf "Battery: %s%% [%s]" "$(apm -l)" "$stat"
		;;
	* )
		dir="/sys/class/power_supply/BAT?"
		bat=$(cat $dir/capacity)
		status=$(cat $dir/status)
		case "$status" in
			"Discharging")
				stat='z'
				[ $bat -le 20 ] && {
					icon=ðŸª«
					notify-send "Attention:" "Battery low!"
				} || icon=ðŸ”‹
				;;
			"Charging") stat='+' && icon=ðŸ”Œ ;;
			"Full") stat='@' && icon=âš¡ ;;
			*) stat='x' ;;
		esac
		printf "%s%s%% [%s]" "$icon" "$bat" "$stat"
		;;
esac
