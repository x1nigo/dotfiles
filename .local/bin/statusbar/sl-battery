#!/bin/sh

dir="/sys/class/power_supply/BAT?"
bat=$(cat $dir/capacity)
status=$(cat $dir/status)
case "$status" in
	"Discharging")
		[ $bat -le 20 ] && {
			icon=ğŸª«
			notify-send "Attention:" "Battery low!"
		} || icon=ğŸ”‹
		;;
	"Charging") icon=ğŸ”Œ ;;
	"Full") icon=âš¡ ;;
	*) icon=ğŸ•°ï¸ ;;
esac
printf "%s%s%%" "$icon" "$bat"
