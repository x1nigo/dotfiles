#!/bin/sh

dir="/sys/class/power_supply/BAT?"
bat=$(cat $dir/capacity)
status=$(cat $dir/status)
case "$status" in
	"Discharging")
		[ $bat -le 20 ] && {
			icon=🪫
			notify-send "Attention:" "Battery low!"
		} || icon=🔋
		;;
	"Charging") icon=🔌 ;;
	"Full") icon=⚡ ;;
	*) icon=🕰️ ;;
esac
printf "%s%s%%" "$icon" "$bat"
