#!/bin/sh

case $BUTTON in
	3) notify-send "🌐 Network Traffic module" "Displays bandwidth per second.
- 🔻 Received bytes
- 🔺 Transmitted bytes ";;
	5) $TERMINAL -e $EDITOR "$0" ;;
esac

update() {
	sum=0
	for arg; do
		read -r i < "$arg"
		sum=$(( sum + i ))
	done
	cache=/tmp/${1##*/}
	[ -f "$cache" ] && read -r old < "$cache" || old=0
	printf %d\\n "$sum" > "$cache"
	printf %d\\n $(( sum - old ))
}

rx=$(update /sys/class/net/[ew]*/statistics/rx_bytes)
tx=$(update /sys/class/net/[ew]*/statistics/tx_bytes)

printf "🔻%6sB 🔺%6sB\\n" $(numfmt --to=iec $rx $tx)
