#! /bin/sh

case $BUTTON in
	3) notify-send "ðŸ“² Network Traffic module:" "\[Displays bandwidth\]
ðŸ”» Received bytes
ðŸ”º Transmitted bytes ";;
	5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

update() {
	sum=0
	for arg; do
		read -r i < "$arg"
		sum=$(( sum + i ))
	done
	cache=/tmp/${1##*/}
	[ -f "$cache" ] && read -r old < "$cache" || old=0
	printf %d\\n "$sum" > "$cache"
	printf %d\\n $(( sum - old ))
}

rx=$(update /sys/class/net/[ew]*/statistics/rx_bytes)
tx=$(update /sys/class/net/[ew]*/statistics/tx_bytes)

printf "ðŸ”»%6sB ðŸ”º%6sB\\n" $(numfmt --to=iec $rx $tx)
