state="$(transmission-remote -t all -i | grep 'State:')"
percent="$(transmission-remote -t all -i | grep 'Percent Done:')"
speed="$(transmission-remote -t all -i | grep 'Download Speed:')"

case $BUTTON in
	1) notify-send "$name" "$state
$percent
