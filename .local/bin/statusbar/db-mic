#!/bin/sh

case $BUTTON in
        1) wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle ;;
        3) notify-send "ğŸ¤ Microphone module" "Click to toggle mute.
- ğŸ™ï¸ mic on
- ğŸ¤« mic off (shh...)" ;;
        4) setsid -f ${TERMINAL:-st} -e pulsemixer ;;
        5) $TERMINAL -e $EDITOR "$0" ;;
esac

mic=$(wpctl get-volume @DEFAULT_AUDIO_SOURCE@)

[ "$mic" != "${mic%\[MUTED\]}" ] && echo "ğŸ¤«" && exit

mic="${mic#Volume: }"

split() {
	# For omitting the . without calling an external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

mic="$(printf "%.0f" "$(split "$mic" ".")")"

case 1 in
	$((mic >= 1 )) ) icon="ğŸ™ï¸" ;;
	* ) echo "ğŸ¤«" && exit ;;
esac

echo "$icon$mic%"
