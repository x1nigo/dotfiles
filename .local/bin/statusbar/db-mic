#!/bin/sh

mic=$(wpctl get-volume @DEFAULT_AUDIO_SOURCE@)

[ "$mic" != "${mic%\[MUTED\]}" ] && echo "ğŸ¤«" && exit

mic="${mic#Volume: }"

split() {
	# For omitting the . without calling an external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

mic="$(printf "%.0f" "$(split "$mic" ".")")"

case 1 in
	$((mic >= 1 )) ) icon="ğŸ™ï¸" ;;
	* ) echo "ğŸ¤«" && exit ;;
esac

echo "$icon$mic%"
