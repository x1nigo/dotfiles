#!/bin/sh

mic=$(wpctl get-volume @DEFAULT_AUDIO_SOURCE@)

case $BUTTON in
	1) wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle ;;
	3) notify-send "🎤 Microphone Module:" "Left-click to toggle microphone mute." ;;
	6) ${TERMINAL:-st} -e "$EDITOR" "$0" ;;
esac

[ "$mic" != "${mic%\[MUTED\]}" ] && exit

mic="${mic#Volume: }"

split() {
	# For omitting the . without calling an external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

mic="$(printf "%.0f" "$(split "$mic" ".")")"

case 1 in
	$((mic >= 1 )) ) icon="🎙️" ;;
	* ) exit ;;
esac

printf "%s%s%%" "$icon" "$mic"
