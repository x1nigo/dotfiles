#!/bin/sh

case $BUTTON in
        1) pamixer --default-source -t ;;
        3) notify-send "🎤 Microphone module" "Click to toggle mute.
- 🎙️ microphone on
- Disappears if turned off." ;;
        4) setsid -f ${TERMINAL:-st} -e pulsemixer ;;
        5) $TERMINAL -e $EDITOR "$0" ;;
esac

mic=$(wpctl get-volume @DEFAULT_AUDIO_SOURCE@)

[ "$mic" != "${mic%\[MUTED\]}" ] && exit 0

mic="${mic#Volume: }"

split() {
	# For omitting the . without calling an external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

mic="$(printf "%.0f" "$(split "$mic" ".")")"

case 1 in
	$((mic >= 1 )) ) icon="🎙️" ;;
	* ) exit 0 ;;
esac

echo "$icon$mic%"
