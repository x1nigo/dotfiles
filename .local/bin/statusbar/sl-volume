#!/bin/sh

case "$(uname)" in
	"OpenBSD" )
		vol=$(sndioctl output.level | sed 's/^.*=//g')
		raw=$(printf "%0.2f" "$vol" | sed 's/^1\./1/g;s/^.*\.//g')
		muted=$(sndioctl output.mute | sed 's/^.*=//g')
		case "$muted" in
			0) stat=Volume ;;
			1) stat=Muted ;;
		esac
		printf "%s: %s%%" "$stat" "$raw"
		;;
	* )
		vol=$(wpctl get-volume @DEFAULT_AUDIO_SINK@)

		[ "$vol" != "${vol%\[MUTED\]}" ] && exit

		vol="${vol#Volume: }"
		split() {
			# For ommiting the . without calling and external program.
			IFS=$2
			set -- $1
			printf '%s' "$@"
		}
		vol="$(printf "%.0f" "$(split "$vol" ".")")"
		case 1 in
			$((vol >= 70)) ) icon="ðŸ”Š" ;;
			$((vol >= 30)) ) icon="ðŸ”‰" ;;
			$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
			* ) icon=ðŸ”‡ && exit ;;
		esac
		printf "%s%s%%" "$icon" "$vol"
			;;
esac
