#!/bin/sh

update() {
	sum=0
	for arg; do
		read -r i < "$arg"
		sum=$(( sum + i ))
	done
	cache=/tmp/${1##*/}
	[ -f "$cache" ] && read -r old < "$cache" || old=0
	printf %d\\n "$sum" > "$cache"
	printf %d\\n $(( sum - old ))
}

case $BUTTON in
	1) ${TERMINAL:-st} -e nmtui ;;
	3) notify-send "ğŸŒ Nettraffick Module:" "Displays recieved and transmitted bytes per second." ;;
	6) ${TERMINAL:-st} -e "$EDITOR" "$0" ;;
esac

rx=$(update /sys/class/net/[ew]*/statistics/rx_bytes)
tx=$(update /sys/class/net/[ew]*/statistics/tx_bytes)

printf "ğŸ”»%4sB ğŸ”º%4sB\\n" $(numfmt --to=iec $rx $tx)
