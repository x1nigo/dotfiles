#! /bin/sh

# Displays number of unread mail and an loading icon if updating.
# When clicked, brings up `neomutt`.

case $BUTTON in
	1) setsid -f ${TERMINAL:-st} -e neomutt ;;
	3) notify-send "ğŸ“¬ Mail module" "\[Shows unread mail\]
- Shows ğŸ”ƒ if syncing mail
- Left click opens neomutt
- Shift+Right click syncs mail" ;;
	4) setsid -f mw -Y ;;
	5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

# Indicate the number of unread mail.
unread="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/*/[Ii][Nn][Bb][Oo][Xx]/new/ -type f | wc -l 2>/dev/null)"
# Determine if mbsync is currently in its process.
pidof mbsync >/dev/null 2>&1 && icon="ğŸ”ƒ"

# Display the proper icon and corresponding mail depending on status.
[ $unread = 0 ] && printf "%s" "ğŸ“­$icon" || printf "%s" "ğŸ“¬$unread$icon"
