#!/bin/sh

case "$(date +'%I')" in
        00) timeicon="ğŸ•›" ;;
        01) timeicon="ğŸ•" ;;
        02) timeicon="ğŸ•‘" ;;
        03) timeicon="ğŸ•’" ;;
        04) timeicon="ğŸ•“" ;;
        05) timeicon="ğŸ•”" ;;
        06) timeicon="ğŸ••" ;;
        07) timeicon="ğŸ•–" ;;
        08) timeicon="ğŸ•—" ;;
        09) timeicon="ğŸ•˜" ;;
        10) timeicon="ğŸ•™" ;;
        11) timeicon="ğŸ•š" ;;
        12) timeicon="ğŸ•›" ;;
esac

case $BUTTON in
	1) notify-send "This is the calendar for this month:" "$(cal)" ;;
	3) notify-send "ğŸ“… Date and Time Module:" "Displays the calendar of the month." ;;
	6) ${TERMINAL:-st} -e "$EDITOR" "$0" ;;
esac

date=$(date +'%Y %b %d (%a)')
time=$(date +'%I:%M%p')

printf "%s %s%s\n" "$date" "$timeicon" "$time"
