#!/bin/sh

case "$(date +'%I')" in
        00) timeicon="ğŸ•›" ;;
        01) timeicon="ğŸ•" ;;
        02) timeicon="ğŸ•‘" ;;
        03) timeicon="ğŸ•’" ;;
        04) timeicon="ğŸ•“" ;;
        05) timeicon="ğŸ•”" ;;
        06) timeicon="ğŸ••" ;;
        07) timeicon="ğŸ•–" ;;
        08) timeicon="ğŸ•—" ;;
        09) timeicon="ğŸ•˜" ;;
        10) timeicon="ğŸ•™" ;;
        11) timeicon="ğŸ•š" ;;
        12) timeicon="ğŸ•›" ;;
esac

date=$(date +'%a, %Y %b %d') && dateicon="ğŸ—“ï¸"
time=$(date +'%I:%M %P')

case $BUTTON in
        1) notify-send "$(cal)" ;;
        3) notify-send "ğŸ—“ï¸ Date and Time module:" "\[Click to display current month\]" ;;
        5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

printf "%s%s  %s%s\n" "$dateicon" "$date" "$timeicon" "$time"
