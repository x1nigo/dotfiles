#!/bin/sh

case "$(date +'%I')" in
        00) timeicon="🕛" ;;
        01) timeicon="🕐" ;;
        02) timeicon="🕑" ;;
        03) timeicon="🕒" ;;
        04) timeicon="🕓" ;;
        05) timeicon="🕔" ;;
        06) timeicon="🕕" ;;
        07) timeicon="🕖" ;;
        08) timeicon="🕗" ;;
        09) timeicon="🕘" ;;
        10) timeicon="🕙" ;;
        11) timeicon="🕚" ;;
        12) timeicon="🕛" ;;
esac

case $BUTTON in
	1) notify-send "This is the calendar for this month:" "$(cal)" ;;
	3) notify-send "📅 Date and Time Module:" "Displays the calendar of the month." ;;
	6) ${TERMINAL:-st} -e "$EDITOR" "$0" ;;
esac

date=$(date +'%Y %b %d (%a)')
time=$(date +'%I:%M%p')

printf "%s %s%s\n" "$date" "$timeicon" "$time"
