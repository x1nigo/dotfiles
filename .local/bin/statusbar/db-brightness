#!/bin/sh

dir="/sys/class/backlight/intel_backlight"
bl=$(cat $dir/brightness) && total=$(cat $dir/max_brightness) && perc=$(( $bl * 100 / $total ))

[ $perc -ge 50 ] && icon="ðŸŒ…" || icon="ðŸŒƒ"

