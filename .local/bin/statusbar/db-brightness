        3) notify-send "ðŸ”¦ Brightness module:" "\[Displays monitor brightness\]
ðŸŒ… brightness is 50% or higher
ðŸŒƒ less than 50%" ;;
	5) st -e $EDITOR ${XDG_CONFIG_HOME:-$HOME/.config}/dwmblocks/blocks.h ;;
esac

printf "%s%s%%\n" "$icon" "$perc"
