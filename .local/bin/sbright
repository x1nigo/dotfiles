#! /bin/sh

total=$(cat /sys/class/backlight/intel_backlight/max_brightness)
cur=$(cat /sys/class/backlight/intel_backlight/brightness)

inc() {
	file="/sys/class/backlight/intel_backlight/brightness"
	inc=$(( $total / 20 ))
	echo $(( $cur + $inc )) > $file
}

dec() {
	file="/sys/class/backlight/intel_backlight/brightness"
	inc=$(( $total / 20 ))
	echo $(( $cur - $inc )) > $file
}

$1
