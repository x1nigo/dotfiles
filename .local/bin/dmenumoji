#! /bin/sh

emoji="$(cat ${XDG_DATA_HOME:-$HOME/.local/share}/emojis.txt | dmenu -p 'Pick an emoji:' -l 12 | awk '{print $1}')"

[ -z "$emoji" ] && notify-send -t 6000 "â›” No emoji selected." && exit || printf $emoji | xclip -i -selection clipboard >/dev/null 2>&1 && notify-send -t 6000 "$emoji Copied to clipboard!"
