#! /bin/sh

# Use xrandr to get options and see which screens are
# available for use.
option="$(xrandr | grep -i '\sconnected' | dmenu -l 5 -p 'Connect to which option?' | cut -d' ' -f1)"
# Exit script if nothing is selected.
[ -z $option ] && exit 1

# Pick the resolution of your screen output.
resolution="$(xrandr | awk '{print $1}' | grep '[0-9]\+x[0-9]\+' | dmenu -p 'Resolution:')"
[ -z $resolution ] && exit 1

# Main command
xrandr --output $option --mode $resolution
