#! /bin/sh

# You can use this if the terminal is your choice.
# echo -n "Enter new font: "
# read myfont

# Use dmenu for convenience (no need to open a terminal).
myfont=$(echo -n '' | dmenu -p "Enter new font:")
[ -z "$myfont" ] && exit 1

sed -i "s/^<\!--current font-->.*$/<\!--current font-->     <family>$myfont<\/family>/" ~/.config/fontconfig/conf.d/60-latin.conf && \
notify-send "ðŸ“œ Changed changed!" "\`$myfont\`"
