#! /bin/sh

menu=$(printf "ğŸ–¥ï¸ shutdown\nğŸ¥¾ reboot\nğŸšª logout\nğŸ’¤ sleep\nğŸ”’ lock" | dmenu -p "System Controls:")

wm="dwm"
if ls -l /sbin/init | grep "systemd"; then
	cmd="systemctl"
else
	cmd="loginctl"
fi

case $menu in
        "ğŸ–¥ï¸ shutdown") $cmd poweroff ;;
        "ğŸ¥¾ reboot") $cmd reboot ;;
        "ğŸšª logout") killall $wm ;;
        "ğŸ’¤ sleep") slock $cmd suspend -i && $(notify-send -t 6000 "ğŸ˜‘ You finally woke up.") ;;
        "ğŸ”’ lock") slock && $(notify-send -t 6000 "ğŸ‰ Welcome back, $USER!") ;;
esac
