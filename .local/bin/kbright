#! /bin/sh

kbd=$(ls /sys/class/leds | grep kbd_backlight)
total=$(cat /sys/class/leds/$kbd/max_brightness)
cur=$(cat /sys/class/leds/$kbd/brightness)

inc() {
	file="/sys/class/leds/$kbd/brightness"
	inc=$(( $total / 20 ))
	echo $(( $cur + $inc )) > $file
}

dec() {
	file="/sys/class/leds/$kbd/brightness"
	inc=$(( $total / 20 ))
	echo $(( $cur - $inc )) > $file
}

$1
