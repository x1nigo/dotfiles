#! /bin/sh

bookmark=$(cat ${XDG_DATA_HOME:-$HOME/.local/share}/bookmarks.txt | dmenu -p "Pick a bookmark:" -l 12 | awk '{print $1'})

[ -z $bookmark ] && notify-send -t 6000 "â›” No bookmark selected." && exit || printf $bookmark | xclip -i -selection clipboard >/dev/null 2>&1 && notify-send -t 6000 "ðŸ”– Bookmark copied to clipboard!"
