#!/bin/sh

font="$(fc-list | grep "\.ttf\|\.otf" | sed 's/.*: //g;s/:.*$//g;s/,.*$//g' | sort -h | uniq | dmenu -l 20 -p "Select a font:")"
[ -z "$font" ] && exit 1

sed -i "s/<!--main--><family>.*$/<!--main--><family>$font<\/family>/" "${XDG_CONFIG_HOME:-$HOME/.config}"/fontconfig/fonts.conf && \
	notify-send "ðŸŽ¨ Changing font now..." "Successfully switched to \`$font\`. Restart your wm to effect changes."
