#!/bin/sh

font="$(fc-list | grep \.ttf | sed 's/.*: //g;s/:.*$//g' | sort -h | uniq | dmenu)"
[ -z "$font" ] && exit 1

sed -i "s/<!--main--><family>.*$/<!--main--><family>$font<\/family>/" "${XDG_CONFIG_HOME:-$HOME/.config}"/fontconfig/fonts.conf && \
	notify-send "ðŸŽ¨ Font has changed." "It is now \`$font\`."
