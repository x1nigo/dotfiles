#! /bin/sh

# We need to use this to separate the drives properly.
IFS=''

# Simple output of the lsblk command.
output=$(lsblk -rpo "name,size,fstype,type,mountpoint" | grep -E "/mnt|/media|/mount")

# Get encrypted drives.
allencrypted=$(echo $output | grep crypt | awk '{print $1}')
[ -z $allencrypted ] || encrypted=$(echo $allencrypted | sed "s/^/ðŸ”“ /")
# Get regular drives.
allregular=$(echo $output | grep -v crypt | awk '{print $1}')
[ -z $allregular ] || regular=$(echo $allregular | sed "s/^/ðŸ’¾ /")
phones="$(simple-mtpfs -l 2>/dev/null | sed 's/^/ðŸ“± /')"
mp=$(cat /etc/mtab | grep '^simple-mtpfs' | cut -d' ' -f2)

# Just mash everything into one variable for convenience.
alldrives=$(echo "$encrypted
$regular
$phones" | sed '/^$/d')
[ -z $alldrives ] && notify-send "ðŸ’¾ No drives mounted on this device." "Please try again." && exit 1
drive=$(echo $alldrives | dmenu -p 'Unmount which drive?')
[ -z $drive ] && exit 1

getmount() {
	mountpoint=$(echo $output | grep $selected | awk '{print $5}')
	[ -z $mountpoint ] && exit 1
}

case $drive in
	ðŸ’¾*)
		selected=$(echo $drive | cut -d' ' -f2)
		getmount
		sudo umount $mountpoint &&
			notify-send "ðŸ’¾ Unmounted drive successfully." "You may now safely remove your drive." ;;
	ðŸ”“*)
		selected=$(echo $drive | cut -d' ' -f2)
		base="${selected##*/}"
		getmount
		sudo umount $mountpoint &&
			sudo cryptsetup close $base &&
			notify-send "ðŸ”’ Successfully re-encrypted and unmounted /dev/mapper/$base." "You may now safely remove your drive." ;;
	ðŸ“±*)
		sudo fusermount -u $mp && \
			notify-send "ðŸ“² Successfully unmounted android phone from \`$mp\`." "You may now safely remove your phone cable." ;;
esac
