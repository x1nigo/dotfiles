#!/bin/sh

file="$1"
base="${file%.*}"
ext="${file##*.}"

case "$ext" in
        c) gcc "$file" -o "$base" && "$base" ;;
        cpp) g++ "$file" -o "$base" && "$base" ;;
        h) sudo make clean install ;;
        ms) groff -ms -tbl -T pdf "$file" > "$base".pdf ;;
        py) python "$file" ;;
        tex) xelatex "$file" ;;
	md) lowdown --parse-no-intraemph "$file" -Tms | groff -mpdfmark -ms -kept -T pdf > "$base".pdf
esac
