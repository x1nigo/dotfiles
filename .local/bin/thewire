#! /bin/sh

# This works for HDMI cables only. I haven't tested it out
# with other types of connectors (yet).
# TODO: Fix issues with audio.

option="$(xrandr | grep -i '^hdmi-[0-9]\sconnected' | dmenu -p 'Connect screen to:' | cut -d' ' -f1)"
# Exit script if nothing is selected.
[ -z $option ] && exit 1

# Pick the resolution of your screen output.
resolution="$(xrandr | awk '{print $1}' | grep '[0-9]\+x[0-9]\+' | dmenu -p 'Resolution:')"
[ -z $resolution ] && exit 1

# Main command
xrandr --output $option --mode $resolution && \
	notify-send "ðŸ“º Establishing \`$option\` connection..." "Please wait a moment."
