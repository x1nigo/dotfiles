#!/bin/sh

# Parse through a list of videos and view such media without a browser.

vidsfile="${XDG_DATA_HOME:-$HOME/.local/share}/02-videos"

vidslist="$(cat "$vidsfile" | dmenu -l 20)"
chosen="$(echo "$vidslist" | cut -d' ' -f1)"
[ -z "$vidslist" ] && exit 1

mpv "$chosen" & notify-send "ðŸŽ¥ Loading video..." "This may take a few seconds."
