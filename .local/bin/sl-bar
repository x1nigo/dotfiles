#!/bin/sh

# Modules are found within the `statusbar` folder labeled: `sl-[module]`.

# The separator between modules
delim() {
	printf "%s" "  "
}

status() {
	sl-blight
	delim
 	sl-volume
 	delim
	sl-traffic
	delim
 	sl-battery
	delim
	sl-internet
	delim
	sl-date
}

while true; do
	xsetroot -name " $(status) "
	sleep 8
done
