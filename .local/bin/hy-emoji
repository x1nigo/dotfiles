#!/bin/sh

fullemoji="$(cat ${XDG_DATA_HOME:-$HOME/.local/share}/00-emojis | rofi -dmenu -i -p "Copy an emoji (ESC to cancel):")"
emoji="$(echo $fullemoji | cut -d' ' -f1)"
[ -z "$fullemoji" ] && exit 1

echo -n $emoji | wl-copy >/dev/null 2>&1 && notify-send "Selected emoji copied to clipboard!" "$fullemoji"
