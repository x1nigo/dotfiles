#!/bin/sh

total=$(cat /sys/class/backlight/*/max_brightness)
current=$(cat /sys/class/backlight/*/brightness)
file="/sys/class/backlight/intel_backlight/brightness"

inc() {
	increment=$(( $total / 20 ))
	echo $(( $current + $increment )) > $file
}

dec() {
	increment=$(( $total / 20 ))
	echo $(( $current - $increment )) > $file
}

$1
