#!/bin/sh

# This script requires the `xdo` program installed.
# How to use:
#	swallow [program] [file]
#	e.g. swallow sxiv image.png

old_window_id="$(xdo id)"
if [[ -n $1 && -f $2 ]]; then # Checks if program and file even exist.
	xdo hide "$old_window_id"; "$1" "$2"; xdo show "$old_window_id"
fi
