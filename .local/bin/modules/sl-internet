#!/bin/sh

# Wifi
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ]; then
	wifiicon="$(awk '/^\s*w/ { print "ğŸŒ", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ]; then
	[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ğŸŒ " || wifiicon="â›” "
fi

# Ethernet
[ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon="ğŸ–¥ï¸ " || ethericon="ğŸˆµ "

printf "%s%s\\n" "$wifiicon" "$ethericon"
