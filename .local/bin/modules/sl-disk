#!/bin/sh

case "$BUTTON" in
	3) notify-send "ğŸ  disk space" "Shows the root directory's free space. Updates once in a while." ;;
esac

# Checks the current storage of the root ("/") directory.
if [ "$(df -h | awk '/\/$/ {print $5}' | sed 's/\%//')" -ge 50 ]; then
	df -h | awk '/\/$/ {print "ğŸš©" $4, "(" $5, "free" ")"}'
else
	df -h | awk '/\/$/ {print "ğŸ " $4, "(" $5, "free" ")"}'
fi
