#!/bin/sh

url="rate.sx/btc"
price=$(curl -s "$url" | grep 'avg:' | cut -d' ' -f2 | sed 's/\[.*//g') # Remove the color sequence at the end.
icon=ðŸ’°

case $BUTTON in
	3) notify-send " ðŸ’° Bitcoin price module" "\- See the current exchange rate between Bitcoin and USD." ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

printf "%s%s" "$icon" "$price"
