#!/bin/sh

case "$BUTTON" in
	3) notify-send "ğŸ´ / ğŸ’¾ mounted drives" "Shows the currently mounted drives (aside from the main system) e.g. USB drives." ;;
esac

if [ -n "$(df -h | grep -i "/mnt$" 2>/dev/null)" ]; then
	mounticon="ğŸ´" && device="$(echo $(df | grep -i "/mnt$") | awk '{print $1}')"
else
	mounticon="ğŸ’¾" && device=""
fi

printf "%s%s\\n" "$mounticon" "$device"
