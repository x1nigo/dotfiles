#!/bin/sh

case "$BUTTON" in
	1) $TERMINAL -e pulsemixer ;;
	3) notify-send "üó£ microphone" "Left-click to mute/unmute." ;;
esac

mic="$(wpctl get-volume @DEFAULT_AUDIO_SOURCE@)"

[ "$mic" != "${mic%\[MUTED\]}" ] && printf "‚èπ\\n"  && exit

mic="${mic#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

mic="$(printf "%.0f" "$(split "$mic" ".")")"

printf "üó£%s%%\\n" "$mic"
