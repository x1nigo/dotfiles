#!/bin/sh

# Hyprland-compatible version of "dm-insert".
# Needs "wl-clipboard" installed.

desc="$(cat $HOME/.local/share/01-bookmarks | sed 's/\t.*//' | rofi -dmenu -i -p "INSERT (ESC to cancel):")"
[ -z "$desc" ] && exit 1

url="$(cat $HOME/.local/share/01-bookmarks | grep "$desc" | sed 's/.*\t//')"
echo "$url" | wl-copy && notify-send "Bookmark copied!" "$url"
