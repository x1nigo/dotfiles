#! /bin/sh

file="$@"
base="${file%.*}"
ext="${file##*.}"
newext="opus"

echo "Enter the title: "; read -r title
echo "Enter the artist: "; read -r artist
echo "Enter the album title: "; read -r album
echo "Enter the publication year: "; read -r year
echo "Enter the track number: "; read -r track

ffmpeg -i "$@" -metadata artist="$artist" -metadata title="$title" -metadata album="$album" -metadata year="$year" -metadata track="$track" "$base.$newext"
