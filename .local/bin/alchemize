#! /bin/sh

# This script automatically opens up the output of your file.
# This is compatible with the following file types:
# 	tex
# 	groff/troff
# 	markdown
# 	html

# TODO: Create compatibility with other files.

file="$1"
base="${file%.*}"
ext="${file##*.}"

case $ext in
	tex) setsid -f ${TERMINAL:-st} -e zathura "$base.pdf" ;;
	ms|mom) setsid -f ${TERMINAL:-st} -e zathura "$base.pdf" ;;
	md|markdown) setsid -f ${TERMINAL:-st} -e zathura "$base.pdf" ;;
	html) setsid -f ${BROWSER:-librewolf} "$file" ;;
esac
