auto-reload yes
reload-time 25
external-url-viewer "urlview"

color background white default
color listnormal blue default
color listnormal_unread green default bold
color listfocus black white bold
color listfocus_unread black white bold
color info yellow black bold
color article white default

highlight article "^feed:.*" blue default bold
highlight article "^title:.*" blue default bold
highlight article "^author:.*" red default bold
highlight article "^date:.*" blue default bold
highlight article "^link:.*" red default bold

browser "$BROWSER --new-tab %u"
macro y set browser "mpv %u" ; open-in-browser ; set browser "elinks %u"

# Keybindings
bind-key q hard-quit
bind-key h quit

bind-key j down
bind-key k up
bind-key j next
bind-key k prev

bind-key ENTER open
bind-key l open

bind-key g home
bind-key G end
