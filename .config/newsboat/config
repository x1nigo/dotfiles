auto-reload yes
reload-time 25

color background          white    default
color listnormal          yellow   default
color listfocus           cyan     default protect bold
color listnormal_unread   magenta  default
color listfocus_unread    red      default bold
color info                green    default bold
color article             white    default

highlight article "^feed:.*" magenta default
highlight article "^title:.*" green default
highlight article "^author:.*" red default
highlight article "^date:.*" yellow default
highlight article "^link:.*" cyan default

browser "firefox %u"
macro y set browser "mpv %u" ; open-in-browser ; set browser "elinks %u"

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key l open
bind-key h quit
